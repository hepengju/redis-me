{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RedisME",
  "version": "0.1.0",
  "identifier": "com.hepengju.redis",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "RedisME",
        "width": 1200,
        "height": 800,
        "decorations": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "resources/icons/128x128.png",
      "resources/icons/128x128@2x.png",
      "resources/icons/512x512.png",
      "resources/icons/icon.ico",
      "resources/icons/icon.icns",
      "resources/icons/icon.png",
      "resources/icons/icon.svg"
    ],
    "resources": [
      "resources/conf/*"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDVEQUUwQTQ2NzFBNUM4MUYKUldRZnlLVnhSZ3F1WFUxajFUL2dxU2VMSkZUbnFVZ0pDeWpreittZ2psN0FyYXNlSWlCS2FTNGkK",
      "endpoints": [
        "https://github.com/hepengju/redis-me/releases/latest/download/latest.json"
      ]
    }
  }
}
