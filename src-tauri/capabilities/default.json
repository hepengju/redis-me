{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "log:default",
    "dialog:allow-save",
    "dialog:default",
    {
      "identifier": "core:resources:default",
      "allow": [{ "path": "$RESOURCE/conf/*" }]
    }
  ]
}