/**
 * Redis连接信息
 */
interface RedisProperties {
    id: string
    name: string

    host: string
    port: string
    username?: string
    password?: string
    cluster: boolean
    readonly: boolean

    ssl: boolean
    sslOption: SSLOptions

    // 其他辅助信息
    color: string
    order: number
}

interface SSLOptions {
    key: string
    cert: string
    ca: string
}

interface RedisDB {
    index: number
    label: string
    name: string
}

interface RedisKey {
    key: string
    bytes: string
}

interface RedisSet extends RedisKey {
    value: string
    ttl: number
}

interface RedisHash extends RedisKey {
    hashKey: string
    hashValue: string
}

interface RedisValue {
    type: string
    value: object
    rawValue: object
    ttl: number
    // 添加
    rawSize: number
}

// ~~~~~~~~全局数据类型
interface IStore {
    connList: RedisProperties[]
    conn: RedisProperties
    info: string
    redisKeyList: RedisKey[]
    redisKey: RedisKey | null
    redisValue: RedisValue | null

    dbList: RedisDB[]
    db: RedisDB | null

    exact: boolean
    keyword: string
    readonly: boolean
    activeTabName: string

    loading: ILoading
    dialog: IDialog
    // setting: ISettings
}

// 加载中
interface ILoading {
    info: boolean
    redisKeyList: boolean
    redisValue: boolean
}

// 弹框
interface IDialog {
    conn: boolean,
    setting: boolean
}

